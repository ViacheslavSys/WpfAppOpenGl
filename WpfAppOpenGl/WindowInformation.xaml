<Window x:Class="WpfAppOpenGl.WindowInformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppOpenGl"
        mc:Ignorable="d"
        Title="WindowInformation" Height="150" Width="300"
        Background="#333">
    <Grid>
        <TextBlock Foreground="White" TextWrapping="Wrap" VerticalAlignment="Center" Margin="10"
                   Text="Программа предназначена для визуализации и трансформации 3D-моделей в WPF с использованием OpenGL. С её помощью можно загружать модели, вращать, масштабировать и сдвигать их, а также применять различные преобразования."/>
    </Grid>
</Window>
